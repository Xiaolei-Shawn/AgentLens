{
  "name": "@xiaolei.shawn/mcp-server",
  "version": "0.2.0",
  "description": "Local-first MCP server for AI agent session auditing, with embedded dashboard.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "agentlens": "dist/index.js",
    "al-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js start",
    "dev": "tsc && node dist/index.js start",
    "mcp": "node dist/index.js mcp",
    "ingest": "node dist/index.js ingest",
    "ingest:auto": "node dist/index.js ingest --adapter auto",
    "ingest:codex": "node dist/index.js ingest --adapter codex_jsonl",
    "ingest:cursor": "node dist/index.js ingest --adapter cursor_raw",
    "test": "npm run build && node --test dist/__tests__/ingest.test.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "audit",
    "agent",
    "local-first",
    "observability"
  ],
  "author": "AL Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xiaolei-Shawn/AgentLens.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/Xiaolei-Shawn/AgentLens/issues"
  },
  "homepage": "https://github.com/Xiaolei-Shawn/AgentLens/tree/main/mcp-server#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
